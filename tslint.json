{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "no-namespace": false,
        "max-classes-per-file": false,
        "forin": false,
        "max-line-length": [
            true,
            {
                "limit": 100,
                "ignore-pattern": "^import |^export {(.*?)}",
                "check-strings": true,
                "check-regex": true
            }
        ]
    },
    "rulesDirectory": []
}